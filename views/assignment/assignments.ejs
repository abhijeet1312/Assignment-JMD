<%- include('../partials/header') %>
    <div class="container mt-5">
        <h1>Assignment List </h1>

        <div class="row">
            <div class="col-sm-8">
                <div class="card">
                    <div class="card-body">

                        <% assignmentlistEJS.forEach(element => { %>
                            <h3>
                                Task:
                                <%= element.task %>. Submitted By:
                                    <%= element.username %>
                            </h3>

                            <a class="btn btn-dark btn-lg" href="/assignment/<%= element._id%>" role="button">Move to assignment page</a>

                            <% }) %>




                    </div>
                </div>
            </div>



        </div>
    </div>

    <%- include('../partials/footer') %>